<div class="container">
<h2><%= @list.name %></h2>
    <%= link_to "Get back to the your lists", lists_path, method: :get, class: "btn btn-primary" %>
<div class="container">
  <ul><br>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: 'delete' }, class: "btn btn-danger" %>
      <% if bookmark.comment.present? %>
        <p><%= bookmark.comment %></p>
      <% end %>
      <%= link_to "Add a comment", edit_list_bookmark_path(bookmark.list_id, bookmark), method: :get %>
    </li>
  <% end %>
  </ul>
</div>
</div>
